<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex flex-column">
    <h4 class="text-uppercase"><%= nama_user  %> </h4>
    <h4 class="text-uppercase">Gula Darah: <%= hasilPenilaian %> </h4>
  </div>

  <% if(hasilPenilaian  === "tinggi"){ %> 
  <div class="card mb-4">
    <div class="card-header">
      <b>SARAN</b>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-sm table-bordered table-striped text-center" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-info">
            <tr>
              <th class="p-2">No.</th>
              <th class="p-2">Nama Makanan</th>
              <th class="p-2">Deskripsi</th>
            </tr>
          </thead>
          <tbody>
            <% let num = 1; for(let guladarah of guladarahs){ %>
              <% if(guladarah.keterangan  === "sehat"){ %> 
              <tr class="table-active">
                <td class="p-2 align-middle">
                  <%= num++ %>
                </td>
                <td class="p-2 align-middle">
                  <%= guladarah.nm_makanan %>
                </td>
                <td class="p-2 text-left align-middle">
                  <%= guladarah.description %>
                </td>
              </tr>
              <% } %>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

