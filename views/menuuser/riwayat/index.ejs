<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex flex-column">
    <h4 class="text-uppercase">Riwayat Konsultasi</h4>
    <h4 class="text-uppercase"><%= users[0].nama_user %></h4>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      Data Riwayat Konsultasi
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-sm table-bordered table-striped text-center" id="dataTable" width="100%" cellspacing="0">
          <thead class="table-info">
            <tr>
              <th class="p-2">No.</th>
              <th class="p-2">Konsultasi</th>
              <th class="p-2">Hasil</th>
              <th class="p-2">Tanggal</th>
            </tr>
          </thead>
          <tbody>
            <% let num = 1; for(let riwayat of riwayats){ %>
              <tr class="table-active">
                <td class="p-2 align-middle">
                  <%= num++ %>
                </td>
                <td class="p-2 align-middle">
                  <%= riwayat.konsultasi %>
                </td>
                <td class="p-2 text-center align-middle">
                  <%= riwayat.hasil %>
                </td>
                <td class="p-2 text-center align-middle">
                  <%= riwayat.tanggal.toLocaleDateString() %>
                </td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  