<% layout('layouts/boilerplate')%>
<div class="col-12 mt-3 mb-3 d-flex justify-content-between">
  <h4 class="text-uppercase"><i class="fas fa-users-cog mr-1"></i>Profil User</h4>
</div>

<% for(let profil of profils){ %>
  <% let current_datetime=profil.tgl_lahir%>
  <% let formatted_date=(current_datetime.getDate()) + "-" + (current_datetime.getMonth()+1) + "-" +
    (current_datetime.getFullYear() )%>
<table class="table col-sm-8 mx-auto">
  <thead>
    <tr class="float-lef">
      <th scope="col">Nama</th>
      <th class="">:</th>
      <td scope="col"><%= profil.nama_user %> </td>
    </tr>
    <tr class="float-lef">
      <th scope="row">Username</th>
      <th class="">:</th>
      <td scope="col"><%= profil.username %> </td>
    </tr>
    <tr class="float-lef">
      <th scope="row">Tanggal Lahir</th>
      <th class="">:</th>
      <!-- <td scope="col"><%= //profil.tgl_lahir %> </td> -->
      <td scope="col"><%= formatted_date %> </td>
    </tr>
    <tr class="float-lef">
      <th scope="row">Gol Darah</th>
      <th class="">:</th>
      <td scope="col"><%= profil.gol_darah %> </td>
    </tr>
    <tr class="float-lef">
      <th scope="row">Jenis Kelamin</th>
      <th class="">:</th>
      <td scope="col"><%= profil.jkel %> </td>
    </tr>
    <tr class="float-lef">
      <th scope="row">Password</th>
      <th class="">:</th>
      <td scope="col"><%= profil.password %> </td>
    </tr>
  </thead>

</table>
<div class="container d-flex justify-content-end col-sm-8">
  <a href="/profil/<%= profil.id %>/edit" class="btn btn-warning text-center"><i
    class="fas fa-edit mr-1"></i>Edit Data</a>
  </div>
  <% } %> 