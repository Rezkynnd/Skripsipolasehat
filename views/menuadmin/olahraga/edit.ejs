<% layout('layouts/boilerplate')%>
  <div class="col-12 mt-3 mb-3 d-flex justify-content-between">
    <h4 class="text-uppercase"><i class="fas fa-user-cog mr-1"></i>Data Olahraga</h4>
    <a href="/olahraga" class="btn btn-secondary"><i class="fas fa-arrow-left mr-1"></i>Kembali</a>
  </div>

  <% for(let olahraga of olahragas){ %>
    <div class="card mb-4 d-flex flex-column justify-content-center">
      <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Edit Data Asam Urat
      </div>

      <form class="col-sm-12" method="POST" action="/olahraga/<%=olahraga.id%>?_method=PUT">
        <div class="form-group row">
          <label for="inputnama" class="col-sm-2 col-form-label">Nama Olahraga</label>
          <div class="col-sm-10">
            <input type="text" name="olahraga[name]" value="<%= olahraga.name %>" class="form-control" id="inputnama"
              required>
          </div>
        </div>
        <div class="form-group row">
          <label for="inputusername" class="col-sm-2 col-form-label">Jenis</label>
          <div class="col-sm-10">
            <select class="custom-select" name="olahraga[jenis]" required>
              <option value="" selected >--Jenis--</option>
              <option value="gdarah_tinggi" <%if(olahraga.jenis==="gdarah_tinggi" ){%>
                selected
                <% } %> >gula darah tinggi</option>
              <option value="gdarah_rendah" <%if(olahraga.jenis==="gdarah_rendah" ){%>
                selected
                <% } %> >gula darah rendah</option>
              <option value="asam_urat" <%if(olahraga.jenis==="asam_urat" ){%>
                selected
                <% } %> >asam urat</option>
              <option value="kolestrol" <%if(olahraga.jenis==="kolestrol" ){%>
                selected
                <% } %> >kolestrol</option>
            </select>

          </div>
        </div>
        <div class="form-group row">
          <label class="col-sm-2 col-form-label" for="exampleFormControlTextarea1">Deskripsi</label>
          <div class="col-sm-10">
            <textarea class="form-control" name="olahraga[description]" id="exampleFormControlTextarea1" rows="9"><%= olahraga.description %></textarea>
          </div>
        </div>
        <div class="form-group d-flex flex-row-reverse">
          <button class="btn btn-success ml-1"><i class="fas fa-save mr-1"></i>Update</button>
          <button class="btn btn-primary" type="reset" value="reset"><i class="fas fa-sync-alt mr-1"></i>Reset</button>
        </div>

      </form>
      <% } %>
    </div>